generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Usuários
model User {
  id String @id @default(uuid()) // Aparentemente é melhor para evitar expor a informação de quantos usuários estão no BD
  name String
  email String @unique
  password_hash String
  role String @default("customer") // "admin" ou "customer"
  carts Cart[]
  @@map("users")
}

// 2. Produtos
model Product {
  id String @id @default(uuid())
  name String
  description String
  image_url String
  active Boolean
  variants ProductVariant[]
  categories Category[]
  @@map("products")
}

// 3. Variantes de um produto (café em pó ou em grãos, diferentes pacotes de peso, etc...)
model ProductVariant {
  id String @id @default(uuid())
  product_id String
  type String // Grão ou moído
  weight Int
  price Float
  stock_quantity Int @default(0)
  product Product @relation(fields: [product_id], references: [id])
  cart_items CartItem[]
  @@map("product_variants")
}


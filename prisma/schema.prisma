generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Usuários
model User {
  id String @id @default(uuid()) // Aparentemente é melhor para evitar expor a informação de quantos usuários estão no BD
  name String
  email String @unique
  password_hash String
  role String @default("customer") // "admin" ou "customer"
  carts Cart[]
  @@map("users")
}

// 2. Produtos
model Product {
  id String @id @default(uuid())
  name String
  description String
  image_url String
  active Boolean
  variants ProductVariant[]
  categories Category[]
  @@map("products")
}

// 3. Variantes de um produto (café em pó ou em grãos, diferentes pacotes de peso, etc...)
model ProductVariant {
  id String @id @default(uuid())
  product_id String
  type String // Grão ou moído
  weight Int
  price Float
  stock_quantity Int @default(0)
  product Product @relation(fields: [product_id], references: [id])
  cart_items CartItem[]
  @@map("product_variants")
}

// 4. Categorias
model Category {
  id String @id @default(uuid())
  name String @unique
  products Product[]
  @@map("categories")
}

// 5. Carrinho de Compras
model Cart {
  id String @id @default(uuid())
  user_id String
  status String @default("Open") // "Open" para quando o pedido não foi finalizado e "Closed" quando virar pedido
  created_at DateTime @default(now())
  user User @relation(fields: [user_id], references: [id])
  items CartItem[]
  @@map("carts")
}

// 6. Itens do carrinho
model CartItem {
  id String @id @default(uuid())
  cart_id String
  product_variant_id String
  quantity Int
  cart Cart @relation(fields: [cart_id], references: [id])
  variant ProductVariant @relation(fields: [product_variant_id], references: [id])
  @@map("cart_items")
}
